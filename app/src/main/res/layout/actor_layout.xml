<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="150dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        app:srcCompat="@drawable/bg_img" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="92dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.482"
        app:srcCompat="@drawable/ic_actor" />

    <TextView
        android:id="@+id/actorLastName"
        style="@style/tinyLabelStyle"
        android:layout_marginStart="12dp"
        android:text="Nom :"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/actorFirstName"
        style="@style/tinyLabelStyle"
        android:layout_marginTop="16dp"
        android:text="PrÃ©nom :"
        app:layout_constraintStart_toStartOf="@+id/actorLastName"
        app:layout_constraintTop_toBottomOf="@+id/actorLastName" />

    <TextView
        android:id="@+id/actorSex"
        style="@style/tinyLabelStyle"
        android:text="Sexe :"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/actorFirstName" />
</androidx.constraintlayout.widget.ConstraintLayout>