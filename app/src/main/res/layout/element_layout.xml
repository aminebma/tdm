<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="150dp">

    <ImageView
        android:id="@+id/backgroundWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        app:srcCompat="@drawable/bg_img" />

    <ImageView
        android:id="@+id/elementIcon"
        android:layout_width="90dp"
        android:layout_height="92dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundWhite"
        app:layout_constraintStart_toStartOf="@+id/backgroundWhite"
        app:layout_constraintTop_toTopOf="@+id/backgroundWhite"
        app:layout_constraintVertical_bias="0.482"
        app:srcCompat="@drawable/ic_actor" />

    <TextView
        android:id="@+id/firstField"
        style="@style/tinyLabelStyle"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/elementIcon"
        app:layout_constraintTop_toTopOf="@+id/elementIcon" />

    <TextView
        android:id="@+id/secondField"
        style="@style/tinyLabelStyle"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/firstField"
        app:layout_constraintTop_toBottomOf="@+id/firstField" />

    <TextView
        android:id="@+id/thirdField"
        style="@style/tinyLabelStyle"
        app:layout_constraintBottom_toBottomOf="@+id/elementIcon"
        app:layout_constraintStart_toStartOf="@+id/secondField" />
</androidx.constraintlayout.widget.ConstraintLayout>