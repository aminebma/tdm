<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMovieFragment" >

    <TextView
        android:id="@+id/title"
        style="@style/labelStyle"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Titre :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/titleT"
        style="@style/textInputStyle"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title" />

    <TextView
        android:id="@+id/year"
        style="@style/labelStyle"
        android:layout_marginTop="52dp"
        android:text="AnnÃ©e :"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <EditText
        android:id="@+id/yearT"
        style="@style/textInputStyle"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/year"
        app:layout_constraintEnd_toEndOf="@+id/titleT"
        app:layout_constraintStart_toStartOf="@+id/titleT" />

    <TextView
        android:id="@+id/language"
        style="@style/labelStyle"
        android:layout_marginTop="56dp"
        android:text="Langue :"
        app:layout_constraintStart_toStartOf="@+id/year"
        app:layout_constraintTop_toBottomOf="@+id/year" />

    <EditText
        android:id="@+id/languageT"
        style="@style/textInputStyle"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/language"
        app:layout_constraintEnd_toEndOf="@+id/yearT"
        app:layout_constraintStart_toStartOf="@+id/yearT" />

    <Button
        android:id="@+id/validateMovieBtn"
        style="@style/validateButtonStyle"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_validate"
        android:text="Valider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/languageT"
        app:layout_constraintVertical_bias="0.047" />

</androidx.constraintlayout.widget.ConstraintLayout>