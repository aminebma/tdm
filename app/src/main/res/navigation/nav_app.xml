<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_app"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="bma.amine.tp8.HomeFragment"
        android:label="Accueil"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_addActorFragment"
            app:destination="@id/addActorFragment" />
        <action
            android:id="@+id/action_home_to_addMovieFragment"
            app:destination="@id/addMovieFragment" />
    </fragment>
    <fragment
        android:id="@+id/addActorFragment"
        android:name="bma.amine.tp8.AddActorFragment"
        android:label="fragment_add_actor"
        tools:layout="@layout/fragment_add_actor" >
        <action
            android:id="@+id/action_addActorFragment_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/addMovieFragment"
        android:name="bma.amine.tp8.AddMovieFragment"
        android:label="fragment_add_movie"
        tools:layout="@layout/fragment_add_movie" >
        <action
            android:id="@+id/action_addMovieFragment_to_attachActorFragment"
            app:destination="@id/attachActorFragment" />
        <action
            android:id="@+id/action_addMovieFragment_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/attachActorFragment"
        android:name="bma.amine.tp8.AttachActorFragment"
        android:label="fragment_attach_actor"
        tools:layout="@layout/fragment_attach_actor" >
        <action
            android:id="@+id/action_attachActorFragment_to_home"
            app:destination="@id/home" />
    </fragment>
</navigation>